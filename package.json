{
  "name": "website-analyzer",
  "version": "1.0.0",
  "description": "Website analysis tool with grammar checking and SEO reporting",

  "type": "module",
  "scripts": {
    "start": "node index.js",
    "dev": "node --watch index.js",
    "build": "npm run build:copy && npm run build:optimize",
    "build:copy": "cp index.html public/ 2>/dev/null || copy index.html public\\ 2>nul || echo 'Files copied'",
    "build:optimize": "echo 'Build optimized for Netlify deployment'",
    "netlify:dev": "netlify dev",
    "netlify:deploy": "netlify deploy --prod"
  },
  "dependencies": {
    "groq-sdk": "^0.7.0",
    "cheerio": "^1.0.0-rc.12",
    "axios": "^1.6.0",
    "express": "^4.18.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "netlify-cli": "^17.0.0"
  },
  "keywords": ["website", "analysis", "seo", "grammar", "scraping", "netlify", "serverless", "jamstack"],
  "author": "",
  "license": "MIT"
}